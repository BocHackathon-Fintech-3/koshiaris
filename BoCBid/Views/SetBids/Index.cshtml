@model IEnumerable<BoCBid.Models.SetBid>

@{
    ViewBag.Title = "Index";
}

<h2 style="text-align:center">Bids So Far</h2>

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Products.PhotoUrl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Products.ItemName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Account)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OfferBitPrice)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img class="img-fluid" src="../../@Url.Content(@item.Products.PhotoUrl)" style="width:400px; height:250px">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Products.ItemName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Account)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OfferBitPrice)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @if (item.Products.StatusId == 1)
                {
                    @Html.ActionLink("Request Payment", "RequestPay", new { id = item.Id })
                }
                else if (item.Products.StatusId == 2)
                {
                    @Html.ActionLink("Release Payment", "ReleasePay", new { id = item.Id })
                }

            </td>
        </tr>
    }

</table>
